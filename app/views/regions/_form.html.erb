<%= form_with model: region do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% region.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label(:area) %>
    <%= form.number_field :area, as: :numeric %>km2
    <% region.errors.full_messages_for(:area).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>